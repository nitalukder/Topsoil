<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RulesFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_pop_up"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/lbl_rules"
                android:fontFamily="@font/smithsonian"
                android:gravity="center"
                android:text="Rules"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="32dp"
                android:text="1. Answer as fast as you can.\n2. You have 20 seconds to answer each question.\n3. For each correct answer you get 75 points.\n4. For each wrong answer you get 30 penalty points.
\n5. For each hints you get 30 penalty points." />

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_btn_small"
                android:fontFamily="@font/smithsonian"
                android:gravity="center"
                android:padding="6dp"
                android:text="ok"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>
</layout>